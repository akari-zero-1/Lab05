<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane style="-fx-border-color: black;" xmlns="http://javafx.com/javafx/21"
	xmlns:fx="http://javafx.com/fxml/1">
	<children>
		<VBox alignment="CENTER" prefHeight="250.0" prefWidth="350.0" spacing="20.0">
			<children>
				<Label fx:id="lblTitle" alignment="CENTER" prefHeight="40.0" prefWidth="350.0" text="Title" style="-fx-font-size: 18px;"/>
				<Label fx:id="lblCost" alignment="CENTER" prefHeight="40.0" prefWidth="350.0" text="Cost" style="-fx-font-size: 16px;"/>
				<HBox spacing="15.0" alignment="CENTER" prefHeight="80.0" prefWidth="350.0">
					<children>
						<Button fx:id="btnAddToCart" mnemonicParsing="false"
							onAction="#btnAddToCartClicked" prefHeight="50.0" prefWidth="150.0" text="Add to Cart" />
						<Button fx:id="btnPlay" mnemonicParsing="false"
							onAction="#btnPlayClicked" prefHeight="50.0" prefWidth="150.0" text="Play" />
					</children>
				</HBox>
			</children>
		</VBox>
	</children>
</AnchorPane>
